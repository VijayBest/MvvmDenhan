<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayoutUi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:text="title"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/attachmentImage"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:src="@drawable/ic_icon_attachment"
            android:padding="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/jobTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/marginTopBetweenTextView"
            android:drawableLeft="@drawable/ic_icon_date"
            android:gravity="top"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/blackNintyOpc"
            android:textSize="@dimen/smallTextSize"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dateTime"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableLeft="@drawable/ic_icon_address"
            android:gravity="top"
            android:fontFamily="@font/muli_regular"
            android:layout_marginTop="@dimen/marginTopBetweenTextView"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/blackNintyOpc"
            android:textSize="@dimen/smallTextSize"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/callText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/locationText"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableLeft="@drawable/ic_icon_call"
            android:gravity="top"
            android:fontFamily="@font/muli_regular"
            android:layout_marginTop="@dimen/marginTopBetweenTextView"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/blackNintyOpc"
            android:textSize="@dimen/smallTextSize"/>





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>